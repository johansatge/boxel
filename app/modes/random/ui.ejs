<button class="button button--orange js-randomize">Randomize</button>
<script>
  (() => {
    window.BoxelModes.random = {}
    window.BoxelModes.random.onStateUpdate = (data) => {
      // Nothing to do when receiving a state update
    }
    document.querySelector('.js-randomize').addEventListener('click', () => {
      window.BoxelApplyModeAction('randomizePixels')
    })
  })()
</script>
