<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= viewTitle %></title>
    <meta name="viewport" content="width=device-width">
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 110 110'><text y='90px' font-size='90px'>ðŸ”Œ</text></svg>">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@700&family=Roboto:ital,wght@0,400;0,500;1,400&display=swap" rel="stylesheet">
    <link href="/static/base.css" rel="stylesheet">
    <link href="/static/error.css" rel="stylesheet">
    <link href="/static/button.css" rel="stylesheet">
    <link href="/static/form.css" rel="stylesheet">
    <link href="/static/header.css" rel="stylesheet">
    <link href="/static/mode.css" rel="stylesheet">
    <link href="/static/footer.css" rel="stylesheet">
    <script>window.BoxelModes = {}</script>
  </head>
  <body>
    <div class="error js-error">
      Some error message
    </div>
    <div class="global">
      <h1 class="header js-header">
        <span class="header__text"><%= viewTitle %></span>
        <div class="header__spinner"></div>
      </h1>
      <% modes.forEach(({ id, title, description }) => { %>
        <div class="mode js-mode" data-mode="<%= id %>">
          <h2 class="mode__title">
            <%= title %>
            <span class="mode__description">
              <%= description %>
            </span>
            <button class="button button--orange mode__set js-mode-set" data-mode="<%= id %>">Set</button>
          </h2>
          <div class="mode__inner">
            <%- include('modes/' + id + '/ui'); %>
          </div>
        </div>
      <% }) %>
      <div class="footer-buttons">
        <button class="button button--grey js-shutdown">Shutdown</button>
        <a class="button button--grey" href="/viewstate">View state</a>
        <a class="button button--grey" href="/viewlogs">View logs</a>
      </div>
      <div class="footer">
        <a class="footer__link" href="https://github.com/johansatge/boxel">Source code</a>
        <br>
        Made with â™¥ in Antibes
      </div>
    </div>
    <script src="/static/ui.js"></script>
    <script>
      window.BoxelInitUi()
    </script>
  </body>
</html>
